{
	"name": "mediref-desktop",
	"version": "0.1.20",
	"repository": {
		"type": "git",
		"url": "https://github.com/HemalR/mediref-desktop.git"
	},
	"description": "Mediref on your Desktop!",
	"main": "main.js",
	"scripts": {
		"start": "electron main.js",
		"pack": "build",
		"dist": "build",
		"test": "echo \"Error: no test specified\" && exit 1",
		"pack_windows": "build --win --x64 --ia32",
		"pub": "build --mac --win -p always"
	},
	"author": "Hemal Ruparelia",
	"license": "ISC",
	"dependencies": {
		"electron-context-menu": "^0.9.1",
		"electron-is-dev": "^0.3.0",
		"electron-log": "^2.2.17",
		"electron-updater": "^2.23.3",
		"mime": "^2.3.1"
	},
	"build": {
		"appId": "com.mediref.desktop",
		"asar": true,
		"productName": "Mediref",
		"copyright": "Copyright Â© 2018 Mediref",
		"dmg": {
			"title": "Mediref"
		},
		"mac": {
			"category": "public.app-category.business",
			"type": "distribution",
			"fileAssociations": [
				{
					"ext": [
						"jpg",
						"jpeg",
						"png",
						"PNG",
						"tiff"
					],
					"description": "Image files",
					"role": "Viewer"
				},
				{
					"ext": [
						"pdf",
						"PDF"
					],
					"description": "PDF files",
					"role": "Viewer"
				}
			]
		},
		"win": {
			"target": "nsis"
		},
		"nsis": {
			"oneClick": false,
			"runAfterFinish": true,
			"allowToChangeInstallationDirectory": true
		}
	},
	"devDependencies": {
		"electron": "^1.8.8",
		"electron-builder": "^19.43.4",
		"electron-prebuilt": "^1.4.13"
	}
}

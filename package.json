{
	"name": "mediref-desktop",
	"version": "1.0.10",
	"repository": {
		"type": "git",
		"url": "https://github.com/HemalR/mediref-desktop.git"
	},
	"description": "Mediref on your Desktop!",
	"main": "main.js",
	"scripts": {
		"start": "electron main.js",
		"pack": "electron-builder",
		"dist": "electron-builder",
		"test": "echo \"Error: no test specified\" && exit 1",
		"pack_windows": "electron-builder --win",
		"pack_64": "electron-builder --win --x64",
		"pack_32": "electron-builder --win --ia32",
		"pack_mac": "electron-builder --mac",
		"pub": "electron-builder --mac --win --x64 --ia32 -p always"
	},
	"author": "Mediref",
	"license": "ISC",
	"dependencies": {
		"electron-context-menu": "^2.3.0",
		"electron-dl": "^3.0.2",
		"electron-is-dev": "^1.2.0",
		"electron-log": "^4.2.4",
		"electron-updater": "^4.3.5",
		"mime": "^2.4.6"
	},
	"build": {
		"appId": "com.mediref.desktop",
		"asar": true,
		"productName": "Mediref",
		"copyright": "Copyright Â© 2021 Mediref",
		"dmg": {
			"title": "Mediref",
			"icon": "build/icon.png",
			"sign": true
		},
		"mac": {
			"category": "public.app-category.business",
			"type": "distribution",
			"fileAssociations": [
				{
					"ext": [
						"jpg",
						"jpeg",
						"png",
						"PNG",
						"tiff"
					],
					"description": "Image files",
					"role": "Viewer"
				},
				{
					"ext": [
						"pdf",
						"PDF"
					],
					"description": "PDF files",
					"role": "Viewer"
				}
			]
		},
		"win": {
			"target": "nsis"
		},
		"nsis": {
			"oneClick": true,
			"runAfterFinish": true,
			"allowToChangeInstallationDirectory": false
		}
	},
	"devDependencies": {
		"electron": "12.2.3",
		"electron-builder": "^22.9.1",
		"eslint": "^8.6.0",
		"prettier": "^2.5.1",
		"typescript": "^4.5.4"
	}
}
